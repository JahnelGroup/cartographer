<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true" name="cartographer"
               packages="org.apache.logging.log4j.test">

    <Appenders>
        <Appender type="Console" name="Console">
            <Layout type="PatternLayout" pattern="%d{dd-MMM-yyyy HH:mm:ss,SSS} %X %t %-5p: %c - %m%n" />
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>

</Configuration>
